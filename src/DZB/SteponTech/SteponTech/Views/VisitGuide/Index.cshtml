@using SteponTech.Data.BaseModels
@using System.Linq;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE =edge,chrome =1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>参观指南</title>
    <link rel="shortcut icon" href="/img/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/reset.css" />
    <link rel="stylesheet" type="text/css" href="/common/common.css" />
    <link rel="stylesheet" href="/lib/jquery-calendar/css/calendar.css">
    <link rel="stylesheet" type="text/css" href="/css/visitGuide/visitguide.css" />
    <link rel="stylesheet" type="text/css" href="../../common/newModule.css" />
    <link rel="stylesheet" href="http://api.map.baidu.com/library/SearchInfoWindow/1.5/src/SearchInfoWindow_min.css" />
    <script src="http://api.html5media.info/1.1.8/html5media.min.js"></script>
    <script src="http://apps.bdimg.com/libs/html5shiv/3.7/html5shiv.min.js "></script>
    <script src="http://apps.bdimg.com/libs/respond.js/1.4.2/respond.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <!--顶部开始-->
        <div class="row nav-bg b3-border">
            <div class="container padding_0 aa">
                <div class="row">
                    <div class="col-xs-12 col-sm-12  col-md-12 col-lg-12">
                        <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3  padding_0 logo">
                            <img src="/img/index/banner/logo.png" alt="" class="img-responsive center-block" />
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-9 col-lg-9 padding_0 ">
                            <div class="top-list">
                                <ul>
                                    <a href="http://120.25.240.32:8800/"><li>大众版</li></a>
                                    <a href="http://120.25.240.32:8000/"><li>英文版</li></a>
                                    <a href="http://118.114.244.3:8014/"><li>学术版</li></a>
                                    <a href="http://120.25.240.32:8700/"><li>青教版</li></a>
                                    @{
                                        if (ViewBag.IsLogin == null)
                                        {
                                            <li class="top-listLi5">
                                                <a href="/Vip/Sign">注册</a>
                                            </li>
                                            <li class="top-listLi6">|</li>
                                            <li class="top-listLi7">
                                                <a href="/Vip/Login">登录</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="top-listLi5">
                                                <a id="loginout" style="cursor:pointer">退出登录</a>
                                            </li>
                                            <li class="top-listLi6">
                                                @if (ViewBag.IsLogin.Length > 4)
                                                {
                                                    ViewBag.IsLogin = ViewBag.IsLogin.Substring(0, 4) + "...";
                                                    <a href="/Vip/Index">
                                                        @ViewBag.IsLogin
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a href="/Vip/Index">
                                                        @ViewBag.IsLogin
                                                    </a>
                                                }
                                            </li>
                                            <li class="top-listLi7">您好！亲爱的</li>
                                        }
                                    }

                                </ul>
                            </div>
                            <div class="menu-btn">
                                <img src="/common/headerImg/menu.png" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="hide-top-list">
                    <ul>
                        <a href="http://120.25.240.32:8800/">
                            <li>大众版</li>
                        </a>
                        <a href="http://120.25.240.32:8000/">
                            <li>英文版</li>
                        </a>
                        <a href="http://118.114.244.3:8014/">
                            <li>学术版</li>
                        </a>
                        <a href="http://120.25.240.32:8700/">
                            <li>青教版</li>
                        </a>
                        @{
                            if (ViewBag.IsLogin == null)
                            {
                                <a href="/Vip/Sign">
                                    <li>注册</li>
                                </a>
                                <a href="/Vip/Login">
                                    <li>登录</li>
                                </a>
                            }
                            else
                            {
                                <a id="loginout" style="cursor:pointer">
                                    <li>退出登录</li>
                                </a>
                                @if (ViewBag.IsLogin.Length > 4)
                                {
                                    ViewBag.IsLogin = ViewBag.IsLogin.Substring(0, 4) + "...";
                                    <a href="/Vip/Index">
                                        <li>@ViewBag.IsLogin</li>
                                    </a>
                                }
                                else
                                {
                                    <a href="/Vip/Index">
                                        <li>@ViewBag.IsLogin</li>
                                    </a>
                                }
                            }
                        }
                        @if (ViewBag.Head?.Count > 0)
                        {
                            foreach (Models item in ViewBag.Head)
                            {
                                switch (item.ModelName)
                                {
                                    case "首页":
                                        <a href="/JinSha/Index">
                                            <li>首页</li>
                                        </a>
                                        break;
                                    case "关于金沙":
                                        <a href="/About/Index">
                                            <li>关于金沙</li>
                                        </a>
                                        break;
                                    case "参观指南":
                                        <a class="active" href="/VisitGuide/Index">
                                            <li>参观指南</li>
                                        </a>
                                        break;
                                    case "展览导览":
                                        <a href="/Exhibition/Index">
                                            <li>展览导览</li>
                                        </a>
                                        break;
                                    case "金沙资讯":
                                        <a href="/News/Index">
                                            <li>金沙资讯</li>
                                        </a>
                                        break;
                                    case "艺术金沙":
                                        <a href="/Creation/Index">
                                            <li>艺术金沙</li>
                                        </a>
                                        break;
                                    case "典藏珍品":
                                        <a href="/Collection/Index">
                                            <li>典藏珍品</li>
                                        </a>
                                        break;
                                    case "文化活动":
                                        <a href="/Culture/Index">
                                            <li>文化活动</li>
                                        </a>
                                        break;
                                    case "金沙会员":
                                        <a href="/Vip/Index">
                                            <li>金沙会员</li>
                                        </a>
                                        break;
                                    case "志愿者":
                                        <a href="/Volunteer/Index">
                                            <li>志愿者</li>
                                        </a>
                                        break;
                                }
                            }
                        }
                    </ul>
                </div>
                <div class="row mAp0">
                    <div class="nav-list">
                        <div class="col-xs-12 col-xs-12 col-md-12 col-lg-12 padding_0">
                            <ul>
                                @if (ViewBag.Head?.Count > 0)
                                {
                                    foreach (Models item in ViewBag.Head)
                                    {
                                        switch (item.ModelName)
                                        {
                                            case "首页":
                                                <a href="/JinSha/Index">
                                                    <li>首页</li>
                                                </a>
                                                break;
                                            case "关于金沙":
                                                <a href="/About/Index">
                                                    <li>关于金沙</li>
                                                </a>
                                                break;
                                            case "参观指南":
                                                <a class="active" href="/VisitGuide/Index">
                                                    <li>参观指南</li>
                                                </a>
                                                break;
                                            case "展览导览":
                                                <a href="/Exhibition/Index">
                                                    <li>展览导览</li>
                                                </a>
                                                break;
                                            case "金沙资讯":
                                                <a href="/News/Index">
                                                    <li>金沙资讯</li>
                                                </a>
                                                break;
                                            case "艺术金沙":
                                                <a href="/Creation/Index">
                                                    <li>艺术金沙</li>
                                                </a>
                                                break;
                                            case "典藏珍品":
                                                <a href="/Collection/Index">
                                                    <li>典藏珍品</li>
                                                </a>
                                                break;
                                            case "文化活动":
                                                <a href="/Culture/Index">
                                                    <li>文化活动</li>
                                                </a>
                                                break;
                                            case "金沙会员":
                                                <a href="/Vip/Index">
                                                    <li>金沙会员</li>
                                                </a>
                                                break;
                                            case "志愿者":
                                                <a href="/Volunteer/Index">
                                                    <li>志愿者</li>
                                                </a>
                                                break;
                                        }
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--顶部结束-->
    <!--Banner图-->
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            @if (ViewBag.Banner != null)
            {
                <img src='/upload/banner/@ViewBag.Banner.FileName' class="img-responsive center-block .mbb" alt="展览导览">
            }
        </div>
    </div>
    <!--Banner图下面的内容-->
    <!--买票的弹窗-->
    <div class="buyP">
        <div class="threeLink">
            <p class="closeFont">×</p>
            <a target="_blank" href="http://you.ctrip.com/sight/chengdu104/48863.html">携程</a>
            <a target="_blank" href="http://www.ly.com/scenery/BookSceneryTicket_17528.html">同程网</a>
            <a target="_blank" href="http://ticket.lvmama.com/scenic-104009">驴妈妈</a>
        </div>
    </div>
    <div class="content container">
        <!--内容的导航-->
        <div class="cont-nav row">
            <ul class="center-block">
                @if (ViewBag.Colunms?.Count > 0)
                {
                    for (var i = 0; i < ViewBag.Colunms.Count; i++)
                    {
                        Colunms colunm = ViewBag.Colunms[i];
                        var anchorId = "#" + colunm.Id;
                        <a href="@anchorId"><li>@colunm.Name</li></a>
                    }
                }
            </ul>
        </div>
        @if (ViewBag.Colunms?.Count > 0)
        {
            List<Information> infomations = ViewBag.Informations;
            for (var i = 0; i < ViewBag.Colunms.Count; i++)
            {
                Colunms colunm = ViewBag.Colunms[i];
                var anchorId = colunm.Id;
                var infos = new List<Information>();
                if (infomations?.Count > 0)
                {
                    infos = infomations.Where(e => e.ColumnId == colunm.Id).OrderBy(e => e.CreationDate).ToList();
                }
                switch (colunm.Name)
                {
                    case "开馆时间":
                        if (infos?.Count > 0)
                        {
                    <!--开馆时间-->
                            <div id="@anchorId" class="openTime">
                                <p class="row ptitle">开馆时间</p>
                                <img class="myImg img1" src="/img/visitguide/OPENING-HOURS.png" alt="">
                                <!--左边的时间、天气、开馆时间、售票时间-->
                                <div class="row">
                                    <div class="openTime-info  col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                                        <!--时间-->
                                        <div class="openTime-infoTime">
                                            <div class="timeBox center-block">
                                                <div class="timeNumber col-lg-5 col-md-5 col-sm-5 col-xs-5"></div>

                                                <div class="dateInfo col-lg-7 col-md-7 col-sm-7 col-xs-7">
                                                    <p class="dateInfo-date">
                                                        <span id="dataSpan1"></span>
                                                        
                                                    </p>
                                                    <p><span id="dataSpan2"></span></p>
                                                </div>
                                            </div>
                                        </div>
                                        <!--天气-->
                                        <div class="openTime-infoWeather">
                                            <div id="weather"></div>
                                        </div>
                                        <!--开馆时间、售票时间-->
                                        <div class="openAndSell row">
                                            <div class="open">
                                                <div class="openDiv1 col-xs-4">开馆时间：</div>
                                                <div class="openDiv2  col-xs-8"><pre class="openTimePre">@infos[0].Intro</pre></div>
                                            </div>
                                            <p class="sell"><span class="sellTicketTime">售票时间：</span><span>@infos[0].InformationTime</span></p>
                                        </div>

                                    </div>
                                    <!--右边的日历-->
                                    <div class="openTime-calendar col-lg-6 col-md-6 col-sm-12 col-xs-12 " id="rightCalendar" data-closedate="@ViewBag.Footer.ClosedDay">
                                        <!--<p>金沙日历</p>-->
                                        <div>
                                            <div id="calendar" class="calendar"></div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        }
                        break;
                    case "交通信息":
                        if (infos?.Count > 0)
                        {
                            <!--交通信息-->
                            <div id="@anchorId" class="trafficInfo">
                                <p class="row ptitle">交通信息</p>
                                <img class="myImg" src="/img/visitguide/aaa.png" alt="">
                                <div class="mapBox row">
                                    <div class="mapInfo col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        <div id="map"></div>
                                        <div class="infoBox">
                                            
                                         <p>
                                                <span class="address col-lg-8 col-md-8 col-sm-8 col-xs-12">地址：<span>@infos[0].Address</span></span>
                                                <span class="phone col-lg-4 col-md-4 col-sm-4 col-xs-12">电话：<span>@infos[0].ConsultingTelephone</span></span>
                                            </p>
                                            <p>
                                                <span class="email col-lg-8 col-md-8 col-sm-8 col-xs-12">邮箱：<span>@infos[0].Email</span></span>
                                                <span class="zipCode col-lg-4 col-md-4 col-sm-4 col-xs-12">邮编：<span></span>@infos[0].ZipCode</span>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="goMothods col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        @if (ViewBag.HereColunms?.Count > 0)
                                {
                                            <div class="goMothods-box">
                                                <ul>
                                                    @for (var p = 0; p < ViewBag.HereColunms.Count; p++)
                                                    {
                                                        Colunms hereColunm = ViewBag.HereColunms[p];
                                                        var hereId = "#here" + p;
                                                        if (p == 0)
                                                        {
                                                            <li class="contNav-active" id="@hereId">@hereColunm.Name</li>
                                                        }
                                                        else
                                                        {
                                                            <li id="@hereId">@hereColunm.Name</li>
                                                        }
                                                    }
                                                </ul>
                                                @for (var q = 0; q < ViewBag.HereColunms.Count; q++)
                                                {
                                                    var hereInfos = new List<Information>();
                                                    Colunms hereColunm = ViewBag.HereColunms[q];
                                                    if (infomations?.Count > 0)
                                                    {
                                                        hereInfos = infomations.Where(e => e.ColumnId == hereColunm.Id).OrderBy(e => e.CreationDate).ToList();
                                                    }
                                                    var hereId = "#hereText" + q;
                                                    if (hereInfos?.Count > 0)
                                                    {
                                                        if (q == 0)
                                                        {
                                                            <div class="goMothods-text center-block" id="@hereId">
                                                                @Html.Raw(hereInfos[0].Content)
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="goMothods-text center-block tabText" id="@hereId">
                                                                @Html.Raw(hereInfos[0].Content)
                                                            </div>
                                                        }
                                                    }
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                        break;
                    case "服务信息":
                        <!--服务信息-->

                        <div id="@anchorId" class="serviceInfo">
                            <p class="row ptitle">服务信息</p>
                            <img class="myImg" src="/img/visitguide/fuwu.png" alt="">
                            <div class="serviceInfo-info row">
                                <ul>
                                    @if (ViewBag.ServiceColunms?.Count > 0)
                            {
                                for (var x = 0; x < ViewBag.ServiceColunms.Count; x++)
                                {
                                    var serviceInfos = new List<Information>();
                                    Colunms serviceColunm = ViewBag.ServiceColunms[x];
                                    if (infomations?.Count > 0)
                                    {
                                        serviceInfos = infomations.Where(e => e.ColumnId == serviceColunm.Id).OrderBy(e => e.CreationDate).ToList();
                                    }
                                    switch (serviceColunm.Name)
                                    {
                                        case "票务服务":
                                            if (serviceInfos?.Count > 0)
                                            {
                                                <!--票务服务-->
                                                        <li class="col-lg-6 col-md-6 col-sm-12  col-xs-12">
                                                            @if (x == 0 || x == 1)
                                                            {
                                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 boxImg">
                                                                    <img class="center-block" src="/upload/Information/@serviceInfos[0].Id/@serviceInfos[0].Photo" />
                                                                </div>
                                                            }
                                                            <div class="ticketServiceInfo col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                                <ol>
                                                                    <li class="ticketServiceInfoLi1">票务服务</li>
                                                                    <li class="ticketServiceInfoLi2"></li>
                                                                    <li class="ticketServiceInfoLi3">
                                                                        <p class="buyAddress"><b>购票地点：</b>@serviceInfos[0].Address</p>
                                                                        <p class="buyTime"><b>购票时间：</b>@serviceInfos[0].InformationTime</p>
                                                                        <p class="buyPrice"><b>门票价格：</b>@serviceInfos[0].TicketPrice</p>
                                                                    </li>
                                                                    <a href="/VisitGuide/Service/@serviceInfos[0].Id"><li class="button">详细内容</li></a>
                                                                </ol>
                                                            </div>
                                                            @if (x == 2 || x == 3)
                                                            {
                                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 boxImg">
                                                                    <img class="center-block" src="/upload/Information/@serviceInfos[0].Id/@serviceInfos[0].Photo" />
                                                                </div>
                                                            }
                                                        </li>
                                                    }
                                                    break;
                                                case "讲解服务":
                                                    if (serviceInfos?.Count > 0)
                                                    {
                                                        <!--讲解服务-->
                                                        <li class="col-lg-6 col-md-6 col-sm-12  col-xs-12">
                                                            @if (x == 0 || x == 1)
                                                            {
                                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 boxImg">
                                                                    <img class=" center-block" src="/upload/Information/@serviceInfos[0].Id/@serviceInfos[0].Photo" alt="" />
                                                                </div>
                                                            }
                                                            <div class="explain col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                                <ol>
                                                                    <li class="explainLi1">讲解服务</li>
                                                                    <li class="explainLi2"></li>
                                                                    <li class="explainLi3">
                                                                        <p class="explainAddress"><b>讲解约请地点：</b></p>
                                                                        <p class="explainAddress1">@serviceInfos[0].Intro</p>
                                                                    </li>
                                                                    <a href="/VisitGuide/Service/@serviceInfos[0].Id"><li class="button">详细内容</li></a>
                                                                </ol>
                                                            </div>
                                                            @if (x == 2 || x == 3)
                                                            {
                                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 boxImg">
                                                                    <img class="center-block" src="/upload/Information/@serviceInfos[0].Id/@serviceInfos[0].Photo" alt="" />
                                                                </div>
                                                            }
                                                        </li>
                                                    }
                                                    break;
                                                case "餐饮服务":
                                                    if (serviceInfos?.Count > 0)
                                                    {
                                                        <!--餐饮服务-->
                                                        <li class="col-lg-6 col-md-6 col-sm-12  col-xs-12">
                                                            @if (x == 0 || x == 1)
                                                            {
                                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 boxImg">
                                                                    <img class=" center-block" src="/upload/Information/@serviceInfos[0].Id/@serviceInfos[0].Photo" />
                                                                </div>
                                                            }
                                                            <div class="food col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                                <ol>
                                                                    <li class="foodLi1">餐饮服务</li>
                                                                    <li class="foodLi2"></li>
                                                                    <li class="foodLi3">
                                                                        <p class="foodInfo"><b>品味金沙 时尚餐厅</b>@serviceInfos[0].Intro</p>
                                                                    </li>
                                                                    <a href="/VisitGuide/Service/@serviceInfos[0].Id"><li class="button">详细内容</li></a>
                                                                </ol>
                                                            </div>
                                                            @if (x == 2 || x == 3)
                                                            {
                                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 boxImg">
                                                                    <img class=" center-block" src="/upload/Information/@serviceInfos[0].Id/@serviceInfos[0].Photo" />
                                                                </div>
                                                            }
                                                        </li>
                                                    }
                                                    break;
                                                case "预约服务":
                                                    if (serviceInfos?.Count > 0)
                                                    {
                                                        <!--预约服务-->
                                                        <li class="col-lg-6 col-md-6 col-sm-12  col-xs-12">
                                                            @if (x == 0 || x == 1)
                                                            {
                                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 boxImg">
                                                                    <img class=" center-block" src="/upload/Information/@serviceInfos[0].Id/@serviceInfos[0].Photo" />
                                                                </div>
                                                            }
                                                            <div class="roder col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                                <ol>
                                                                    <li class="roderLi1">预约服务</li>
                                                                    <li class="roderLi2"></li>
                                                                    <li class="roderLi3">
                                                                        <p class="foodInfo"><b>成都金沙遗址博物馆</b>@serviceInfos[0].Intro</p>
                                                                    </li>
                                                                    <li id="buy" class="button">网上订票</li>
                                                                    <a href="/VisitGuide/Notice?id=@serviceInfos[0].Id"><li class="button">详细内容</li></a>
                                                                </ol>
                                                            </div>
                                                            @if (x == 2 || x == 3)
                                                            {
                                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 boxImg">
                                                                    <img class="center-block" src="/upload/Information/@serviceInfos[0].Id/@serviceInfos[0].Photo" />
                                                                </div>
                                                            }
                                                        </li>
                                                    }
                                                    break;
                                            }
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                        break;
                    case "参观须知":
                        if (infos?.Count > 0)
                        {
                            <!--参观须知-->
                            <div id="@anchorId" class="visitInfo">
                                <p class="row ptitle">参观须知</p>
                                <img class="myImg" src="/img/visitguide/VISITOR-REGULATIONS.png" alt="">
                                <!--参观须知的规则-->
                                <div class="rulesBox row">
                                    <ol class="rules col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        @Html.Raw(infos[0].Content)
                                    </ol>
