@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE =edge,chrome =1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link rel="Shortcut Icon" href="../../../img/favicon.ico">
    <title>文化活动</title>
    <link rel="stylesheet" type="text/css" href="../../../css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="../../../common/common.css" />
    <link rel="stylesheet" type="text/css" href="../../../css/reset.css" />
    <link rel="stylesheet" type="text/css" href="../../../css/activities/activityPic.css" />
    <script src="../../../js/jquery.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="../../../js/bootstrap.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="http://api.html5media.info/1.1.8/html5media.min.js"></script>
    <script src="http://apps.bdimg.com/libs/html5shiv/3.7/html5shiv.min.js"></script>
    <script src="http://apps.bdimg.com/libs/respond.js/1.4.2/respond.min.js"></script>

</head>

<body>
    <!--这是hearder-->
    <div class="container-fluid">
        <!--顶部开始-->
        <div class="row nav-bg b3-border">
            <div class="container padding_0">
                <div class="row ">
                    <div class="col-xs-12 col-sm-12  col-md-12 col-lg-12 hh ">
                        <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3  padding_0 logo">
                            <img src="../../common/headerImg/logo.png" alt="" class="img-responsive center-block" />
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-9 col-lg-9 padding_0 ">
                            <div class="top-list">
                                <ul>
                                    <a href="http://120.25.240.32:8800/"><li>大众版</li></a>
                                    <a href="http://120.25.240.32:8000/"><li>英文版</li></a>
                                    <a href="http://118.114.244.3:8014/"><li>学术版</li></a>
                                    <a href="http://120.25.240.32:8700/"><li>青教版</li></a>
                                    @{
                                        if (ViewBag.IsLogin == null)
                                        {
                                            <li class="top-listLi5">
                                                <a href="/Vip/Sign">注册</a>
                                            </li>
                                            <li class="top-listLi6">|</li>
                                            <li class="top-listLi7">
                                                <a href="/Vip/Login">登录</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="top-listLi5">
                                                <a id="loginout" style="cursor:pointer">退出登录</a>
                                            </li>
                                            <li class="top-listLi6">
                                                @if (ViewBag.IsLogin.Length > 4)
                                                {
                                                    ViewBag.IsLogin = ViewBag.IsLogin.Substring(0, 4) + "...";
                                                    <a href="/Vip/Index">
                                                        @ViewBag.IsLogin
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a href="/Vip/Index">
                                                        @ViewBag.IsLogin
                                                    </a>
                                                }
                                            </li>
                                            <li class="top-listLi7">您好！亲爱的</li>
                                        }
                                    }
                                </ul>
                            </div>
                            <div class="menu-btn">
                                <img src="../../img/index/show/menu.png" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="hide-top-list">
                    <ul>
                        <a href="http://120.25.240.32:8800/">
                            <li>大众版</li>
                        </a>
                        <a href="http://120.25.240.32:8000/">
                            <li>英文版</li>
                        </a>
                        <a href="http://118.114.244.3:8014/">
                            <li>学术版</li>
                        </a>
                        <a href="http://120.25.240.32:8700/">
                            <li>青教版</li>
                        </a>
                        @{
                            if (ViewBag.IsLogin == null)
                            {
                                <a href="/Vip/Sign">
                                    <li>注册</li>
                                </a>
                                <a href="/Vip/Login">
                                    <li>登录</li>
                                </a>
                            }
                            else
                            {
                                <a id="loginout" style="cursor:pointer">
                                    <li>退出登录</li>
                                </a>
                                @if (ViewBag.IsLogin.Length > 4)
                                {
                                    ViewBag.IsLogin = ViewBag.IsLogin.Substring(0, 4) + "...";
                                    <a href="/Vip/Index">
                                        <li>@ViewBag.IsLogin</li>
                                    </a>
                                }
                                else
                                {
                                    <a href="/Vip/Index">
                                        <li>@ViewBag.IsLogin</li>
                                    </a>
                                }
                            }
                        }
                        @if (ViewBag.Head != null)
                        {
                            foreach (var item in ViewBag.Head)
                            {
                                if (item.ModelName == "首页")
                                {
                                    <a href="/JinSha/Index">
                                        <li>首页</li>
                                    </a>
                                }
                                else if (item.ModelName == "关于金沙")
                                {
                                    <a href="/About/Index">
                                        <li>关于金沙</li>
                                    </a>
                                }
                                else if (item.ModelName == "参观指南")
                                {
                                    <a href="/VisitGuide/Index">
                                        <li>参观指南</li>
                                    </a>
                                }
                                else if (item.ModelName == "展览导览")
                                {
                                    <a href="/Exhibition/Index">
                                        <li>展览导览</li>
                                    </a>
                                }
                                else if (item.ModelName == "金沙资讯")
                                {
                                    <a href="/NEWS/Index">
                                        <li>金沙资讯</li>
                                    </a>
                                }
                                else if (item.ModelName == "艺术金沙")
                                {
                                    <a href="/Creation/Index">
                                        <li>艺术金沙</li>
                                    </a>
                                }
                                else if (item.ModelName == "典藏珍品")
                                {
                                    <a href="/Collection/Index">
                                        <li>典藏珍品</li>
                                    </a>
                                }
                                else if (item.ModelName == "文化活动")
                                {
                                    <a class="active" href="/Culture/Index">
                                        <li>文化活动</li>
                                    </a>

                                }
                                else if (item.ModelName == "金沙会员")
                                {
                                    <a href="/Vip/Index">
                                        <li>金沙会员</li>
                                    </a>

                                }
                                else
                                {
                                    <a href="/Volunteer/Index">
                                        <li>志愿者</li>
                                    </a>

                                }
                            }

                        }
                    </ul>
                </div>
                <div class="row mAp0">
                    <div class="nav-list">
                        <div class="col-xs-12 col-xs-12 col-md-12 col-lg-12 padding_0">
                            <ul>
                                @if (ViewBag.Head != null)
                                {
                                    foreach (var item in ViewBag.Head)
                                    {
                                        if (item.ModelName == "首页")
                                        {
                                            <a href="/JinSha/Index">
                                                <li>首页</li>
                                            </a>
                                        }
                                        else if (item.ModelName == "关于金沙")
                                        {
                                            <a href="/About/Index">
                                                <li>关于金沙</li>
                                            </a>
                                        }
                                        else if (item.ModelName == "参观指南")
                                        {
                                            <a href="/VisitGuide/Index">
                                                <li>参观指南</li>
                                            </a>
                                        }
                                        else if (item.ModelName == "展览导览")
                                        {
                                            <a href="/Exhibition/Index">
                                                <li>展览导览</li>
                                            </a>
                                        }
                                        else if (item.ModelName == "金沙资讯")
                                        {
                                            <a href="/NEWS/Index">
                                                <li>金沙资讯</li>
                                            </a>
                                        }
                                        else if (item.ModelName == "艺术金沙")
                                        {
                                            <a href="/Creation/Index">
                                                <li>艺术金沙</li>
                                            </a>
                                        }
                                        else if (item.ModelName == "典藏珍品")
                                        {
                                            <a href="/Collection/Index">
                                                <li>典藏珍品</li>
                                            </a>
                                        }
                                        else if (item.ModelName == "文化活动")
                                        {
                                            <a class="active" href="/Culture/Index">
                                                <li>文化活动</li>
                                            </a>

                                        }
                                        else if (item.ModelName == "金沙会员")
                                        {
                                            <a href="/Vip/Index">
                                                <li>金沙会员</li>
                                            </a>

                                        }
                                        else
                                        {
                                            <a href="/Volunteer/Index">
                                                <li>志愿者</li>
                                            </a>

                                        }
                                    }

                                }
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <main>
        <!--link-->
        <div class="linkRoute">
            <div class="container">
                <a href="/" class="firstLink">首页</a>/
                <a href="/Culture">文化活动</a>/
                <a href="">金沙太阳节</a>
            </div>
        </div>
        <!--讲坛-->
        <div class="activity activity_box">
            <div class="container ">
                <div class="title_select clearfix">
                    <div class="box clearfix">
                        <span class="trailer active">活动介绍</span><span>活动集锦</span><span class="review">活动资讯</span>
                    </div>
                </div>
                <!--活动介绍-->
                <div class="introduce row subPages">
                    <div class="col-lg-7 col-md-7 col-sm-10 col-xs-10 wrapper">
                        @if (ViewBag.Info != null)
                        {
                            var src = "/upload/Information/" + ViewBag.Info.Id + "/" + ViewBag.Info.Photo;
                            <div class="pic">
                                <img src="@src" />
                            </div>
                            <div class="content">
                                <h3>@ViewBag.Info.Title</h3>
                                <p class="time">
                                    活动时间：@ViewBag.Info.InformationTime
                                </p>
                                <p class="address">
                                    活动地点：@ViewBag.Info.Address
                                </p>
                            </div>
                            <div class="artical">
                                <p>
                                    @Html.Raw(ViewBag.Info.Content)
                                </p>
                            </div>
                        }
                    </div>
                </div>
                <!--活动集锦-->
                <div class="activity_content subPages row">
                    <h4>
                        活动图集
                    </h4>

                    @if (ViewBag.SunPic != null)
                    {

                        <div id="wrapper" class="col-lg-7 col-md-8 col-xs-11">
                            <!--滚动看图-->
                            <div id="picSlideWrap" class="clearfix">
                                <br>
                                <div class="imgnav" id="imgnav">
                                    <div id="img">
                                        @if (ViewBag.SunPic.Count > 0)
                                        {
                                            for (var i = 0; i < ViewBag.SunPic.Count; i++)
                                            {
                                                var src = "/upload/Information/" + ViewBag.Info.Id + "/" + ViewBag.SunPic[i];
                                                <img src="@src" style="display: none;">
                                            }
                                        }
                                    </div>
                                    <div id="content">

                                        <p>@ViewBag.Info.Title</p>
                                    </div>
                                    <div id="cbtn">
                                        <i class="picSildeLeft"><img src="../../../img/activities/icon_left.png"></i>
                                        <i class="picSildeRight"><img src="../../../img/activities/icon_right.png"></i>
                                        <div id="cSlideUl" class="">
                                            <ul>
                                                @if (ViewBag.SunPic.Count > 0)
                                                {
                                                    for (var i = 0; i < ViewBag.SunPic.Count; i++)
                                                    {
                                                        var src = "/upload/Information/" + ViewBag.Info.Id + "/" + ViewBag.SunPic[i];
                                                        <li><img src="@src"></li>
                                                    }
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--end滚动看图-->
                        </div>
                    }

                    <hr class="fade_line" />
                    <h4 class="active-title">
                        活动视频
                    </h4>
                    @if (ViewBag.SunVideo != null)
                    {
                        <div class="act_vid">
                            <ul class="clearfix">
                                @if (ViewBag.SunVideo.Count > 0)
                                {
                                    for (var i = 0; i < ViewBag.SunVideo.Count; i++)
                                    {
                                        var src = "/upload/Information/" + ViewBag.Info.Id + "/" + ViewBag.SunVideo[i];
                                        var na = (string)ViewBag.SunVideo[i];
                                        var naq = na.Split('.');
                                        <li class="col-lg-4 col-md-4 col-sm-6 col-xs-11">
                                            <div class="new_pic">
                                                <div class="video_show">
                                                    <video src="@src" controls="controls" loop="loop" preload="auto" style="width:98%;height:auto"></video>
                                                </div>
                                                <div class="news_title">
                                                    <p class="subject">
                                                        @naq[0]
                                                    </p>
                                                </div>
                                            </div>
                                        </li>
                                        if (i % 3 == 2)
                                        {
                                            <hr class="fade_line" />
                                        }
                                    }
                                }
                            </ul>
                        </div>

                    }

                </div>
                <div class="activity_news subPages row">
                    <div id="showroom" class="showroom">
                        @if (ViewBag.News != null)
                        {
                            for (var i = 0; i < ViewBag.News.Count; i++)
                            {
                                var src = "/upload/Information/" + ViewBag.News[i].Id + "/" + ViewBag.News[i].Photo;

                                <div class="showroom-one row">
                                    <!--特展厅图片1-->
                                    <a href="/Culture/SunDetail?id=@ViewBag.News[i].Id">
                                        <div class="showroom-img col-lg-3 col-md-4 col-sm-12 col-xs-12">
                                            <img src="@src" />
                                        </div>
                                    </a>
                                    <!--特展厅文字1-->
                                    <a href="/Culture/SunDetail?id=@ViewBag.News[i].Id">
                                        <div class="showroom-info col-lg-9 col-md-8 col-sm-12 col-xs-12">
                                            <h3>@ViewBag.News[i].Title</h3>
                                            <p class="showroom-time">发布时间: @ViewBag.News[i].CreationDate</p>
                                            <p class="showroom-p">@Html.Raw(ViewBag.News[i].Intro == "" ? ViewBag.News[i].Describe : ViewBag.News[i].Intro)</p>
                                            <a href="/Culture/SunDetail?id=@ViewBag.News[i].Id">
                                                <div class="showroom-btn">查看详情</div>
                                            </a>
                                        </div>
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>

            </div>

        </div>
    </main>
    <hr id="hd_bottom_1" />
    @if (ViewBag.Footer != null)
    {
        <footer class="container footer ">
            <div class="row">
                <!--联系我们-->
                <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 callme padding_0">
                    <p class="callmeP1">联系我们</p>
                    <p class="callmeP2">电话:<span> @ViewBag.Footer.PhoneNumber</span></p>
                    <p class="callmeP3">地址:<span> @ViewBag.Footer.Address</span></p>
                    <div class="row twopic">
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 twopicDiv1">
                            <img class="img-responsive" src="@ViewBag.Footer.Wechat" />
                            <p><img src="../common/footerImg/bottom_wechat.png" /><span class="weixincolor">关注官方微信</span></p>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <img class="img-responsive" src="@ViewBag.Footer.Watermark" />
                            <p><img src="../common/footerImg/weibo-icon.png" /><span class="color">关注官方微博</span></p>
                        </div>
                    </div>
                </div>
                <!--友情链接-->
                <div class="col-xs-12 col-sm-5 col-md-4 col-lg-4 col-lg-offset-1 col-md-offset-1  link padding_0">
                    <p class="linkP1">友情链接</p>
                    <!--博物馆-->
                    <div class="footer-museum divselect">
                        <cite onchange="window.location=this.href;">博物馆</cite>
                        <ul id="OtherList" tag="@ViewBag.Footer.MuseumLink"></ul>
                    </div>
                    <!--政府-->
                    <div class="footer-government divselect">
                        <cite onchange="window.location=this.href;">其他</cite>
                        <ul id="GovernmentalList" tag="@ViewBag.Footer.GovernmentLink"></ul>
                        <script>
                            $(function () {
                                var data = JSON.parse($('#GovernmentalList').attr('tag'));
                                var cc1 = "";
                                $.each(data, function (i, item) {
                                    cc1 += "<li><a href='" + item.url + "' selectid='" + i + "'>" + item.name + "</a></li>"
                                });
                                $('#GovernmentalList').append(cc1);
                                var data2 = JSON.parse($('#OtherList').attr('tag'));
                                var cc2 = "";
                                $.each(data2, function (i, item) {
                                    cc2 += "<li><a href='" + item.url + "' selectid='" + i + "'>" + item.name + "</a></li>"
                                });
                                $('#OtherList').append(cc2);
                            });
                        </script>
                    </div>

                    <p class="help">游览帮助</p>
                    <div class="link-btm-info">
                        <ul>
                            @if (ViewBag.JumpLink != null)
                            {
                                foreach (var item in ViewBag.JumpLink)
                                {
                                    <li>
                                        <a href="/VisitGuide/Index#@item.Id">@item.Name</a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
                <!--版权-->
                <div class="col-xs-12  copyright padding_0">
                    <div>
                        <img class="img-responsive" src="../common/footerImg/bottom_logo.png" />
                    </div>
                    <p class="copyrightP1">金沙遗址博物馆版权所有</p>
                    <p class="copyrightP2">@ViewBag.Footer.RegisterNo</p>
                </div>
            </div>
        </footer>
    }
    <!--返回顶部-->
    <div class="toTop" style="display: none;">
        <img class="bgarr" src="../../../img/arrows/return_nor.png" />
        <img class="hoverImg" src="../../../img/arrows/return_pre.png">
    </div>
    <script>
                            $("#loginout").on("click", function () {
                                $.ajax({
                                    url: '/api/Members/MembersLoginout',
                                    type: 'GET',
                                    dataType: "text",
                                    contentType: "application/json",
                                    success: function (data) {
                                        data = JSON.parse(data)
                                        alert(data.message);
                                        window.location.reload();
                                    }
                                });
                            });
    </script>

