                                <div class="center-block " id="bossInfoBox">
                                    <h4>@ViewBag.NewCol[i].Title</h4>
                                    <p class="newInfoP">
                                        @ViewBag.NewCol[i].Intro
                                    </p>
                                    <a href="/About/IntroList?id=@ViewBag.NewCol[i].ColumnId "><div class="newBossSpeech-more">查看更多</div></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
