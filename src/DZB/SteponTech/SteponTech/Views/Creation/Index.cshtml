@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE =edge,chrome =1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>艺术金沙</title>
    <link rel="shortcut icon" href="/img/favicon.ico" />
    <link rel="stylesheet" href="../../css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="../../css/reset.css" />
    <link rel="stylesheet" type="text/css" href="../../common/common.css" />
    <link rel="stylesheet" href="../../css/creation/creation.css">
    <link rel="stylesheet" type="text/css" href="../../common/newModule.css" />
    <script src="http://api.html5media.info/1.1.8/html5media.min.js"></script>
    <script src="http://apps.bdimg.com/libs/html5shiv/3.7/html5shiv.min.js "></script>
    <script src="http://apps.bdimg.com/libs/respond.js/1.4.2/respond.min.js"></script>

</head>

<body>
    <!--这是hearder-->
    <div class="container-fluid">
        <!--顶部开始-->
        <div class="row nav-bg b3-border">
            <div class="container padding_0">
                <div class="row ">
                    <div class="col-xs-12 col-sm-12  col-md-12 col-lg-12 hh ">
                        <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3  padding_0 logo">
                            <img src="../../common/headerImg/logo.png" alt="" class="img-responsive center-block" />
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-9 col-lg-9 padding_0 ">
                            <div class="top-list">
                                <ul>
                                    <a href="http://120.25.240.32:8800/"><li>大众版</li></a>
                                    <a href="http://120.25.240.32:8000/"><li>英文版</li></a>
                                    <a href="http://118.114.244.3:8014/"><li>学术版</li></a>
                                    <a href="http://120.25.240.32:8700/"><li>青教版</li></a>
                                    @{
                                        if (ViewBag.IsLogin == null)
                                        {
                                            <li class="top-listLi5">
                                                <a href="/Vip/Sign">注册</a>
                                            </li>
                                            <li class="top-listLi6">|</li>
                                            <li class="top-listLi7">
                                                <a href="/Vip/Login">登录</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="top-listLi5">
                                                <a id="loginout" style="cursor:pointer">退出登录</a>
                                            </li>
                                            <li class="top-listLi6">
                                                @if (ViewBag.IsLogin.Length > 4)
                                                {
                                                    ViewBag.IsLogin = ViewBag.IsLogin.Substring(0, 4) + "...";
                                                    <a href="/Vip/Index">
                                                        @ViewBag.IsLogin
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a href="/Vip/Index">
                                                        @ViewBag.IsLogin
                                                    </a>
                                                }
                                            </li>
                                            <li class="top-listLi7">您好！亲爱的</li>
                                        }
                                    }
                                </ul>
                            </div>
                            <div class="menu-btn">
                                <img src="../../img/index/show/menu.png" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="hide-top-list">
                    <ul>
                        <a href="http://120.25.240.32:8800/">
                            <li>大众版</li>
                        </a>
                        <a href="http://120.25.240.32:8000/">
                            <li>英文版</li>
                        </a>
                        <a href="http://118.114.244.3:8014/">
                            <li>学术版</li>
                        </a>
                        <a href="http://120.25.240.32:8700/">
                            <li>青教版</li>
                        </a>
                        @{
                            if (ViewBag.IsLogin == null)
                            {
                                <a href="/Vip/Sign">
                                    <li>注册</li>
                                </a>
                                <a href="/Vip/Login">
                                    <li>登录</li>
                                </a>
                            }
                            else
                            {
                                <a id="loginout" style="cursor:pointer">
                                    <li>退出登录</li>
                                </a>
                                @if (ViewBag.IsLogin.Length > 4)
                                {
                                    ViewBag.IsLogin = ViewBag.IsLogin.Substring(0, 4) + "...";
                                    <a href="/Vip/Index">
                                        <li>@ViewBag.IsLogin</li>
                                    </a>
                                }
                                else
                                {
                                    <a href="/Vip/Index">
                                        <li>@ViewBag.IsLogin</li>
                                    </a>
                                }
                            }
                        }
                        @if (ViewBag.Head != null)
                        {
                            foreach (var item in ViewBag.Head)
                            {
                                if (item.ModelName == "首页")
                                {
                                    <a href="/JinSha/Index">
                                        <li>首页</li>
                                    </a>
                                }
                                else if (item.ModelName == "关于金沙")
                                {
                                    <a href="/About/Index">
                                        <li>关于金沙</li>
                                    </a>
                                }
                                else if (item.ModelName == "参观指南")
                                {
                                    <a href="/VisitGuide/Index">
                                        <li>参观指南</li>
                                    </a>
                                }
                                else if (item.ModelName == "展览导览")
                                {
                                    <a href="/Exhibition/Index">
                                        <li>展览导览</li>
                                    </a>
                                }
                                else if (item.ModelName == "金沙资讯")
                                {
                                    <a href="/NEWS/Index">
                                        <li>金沙资讯</li>
                                    </a>
                                }
                                else if (item.ModelName == "艺术金沙")
                                {
                                    <a class="active" href="/Creation/Index">
                                        <li>艺术金沙</li>
                                    </a>
                                }
                                else if (item.ModelName == "典藏珍品")
                                {
                                    <a href="/Collection/Index">
                                        <li>典藏珍品</li>
                                    </a>
                                }
                                else if (item.ModelName == "文化活动")
                                {
                                    <a href="/Culture/Index">
                                        <li>文化活动</li>
                                    </a>

                                }
                                else if (item.ModelName == "金沙会员")
                                {
                                    <a href="/Vip/Index">
                                        <li>金沙会员</li>
                                    </a>

                                }
                                else
                                {
                                    <a href="/Volunteer/Index">
                                        <li>志愿者</li>
                                    </a>

                                }
                            }

                        }
                    </ul>
                </div>
                <div class="row mAp0">
                    <div class="nav-list">
                        <div class="col-xs-12 col-xs-12 col-md-12 col-lg-12 padding_0">
                            <ul>
                                @if (ViewBag.Head != null)
                                {
                                    foreach (var item in ViewBag.Head)
                                    {
                                        if (item.ModelName == "首页")
                                        {
                                            <a href="/JinSha/Index">
                                                <li>首页</li>
                                            </a>
                                        }
                                        else if (item.ModelName == "关于金沙")
                                        {
                                            <a href="/About/Index">
                                                <li>关于金沙</li>
                                            </a>
                                        }
                                        else if (item.ModelName == "参观指南")
                                        {
                                            <a href="/VisitGuide/Index">
                                                <li>参观指南</li>
                                            </a>
                                        }
                                        else if (item.ModelName == "展览导览")
                                        {
                                            <a href="/Exhibition/Index">
                                                <li>展览导览</li>
                                            </a>
                                        }
                                        else if (item.ModelName == "金沙资讯")
                                        {
                                            <a href="/NEWS/Index">
                                                <li>金沙资讯</li>
                                            </a>
                                        }
                                        else if (item.ModelName == "艺术金沙")
                                        {
                                            <a class="active" href="/Creation/Index">
                                                <li>艺术金沙</li>
                                            </a>
                                        }
                                        else if (item.ModelName == "典藏珍品")
                                        {
                                            <a href="/Collection/Index">
                                                <li>典藏珍品</li>
                                            </a>
                                        }
                                        else if (item.ModelName == "文化活动")
                                        {
                                            <a href="/Culture/Index">
                                                <li>文化活动</li>
                                            </a>

                                        }
                                        else if (item.ModelName == "金沙会员")
                                        {
                                            <a href="/Vip/Index">
                                                <li>金沙会员</li>
                                            </a>

                                        }
                                        else
                                        {
                                            <a href="/Volunteer/Index">
                                                <li>志愿者</li>
                                            </a>

                                        }
                                    }

                                }
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!--Banner图下面的内容-->
    <div class="banner ">
        @if (ViewBag.Banner != null)
        {
            var src = "/upload/banner/" + ViewBag.Banner.FileName + "";
            <img src="@src" alt="" class="img-responsive center-block">
        }
    </div>
    <main class="container">
        <!--Banner图下面的内容-->
        <div class="content">
            <div class="art-box">
                <!--文化创作-->
                <div id="content-4" class="content-4 clearfix">
                    <h2 class="art-title">文化创作</h2>
                    <div id="picSlideWrap" class="clearfix">
                        <br>
                        <div class="imgnav" id="imgnav">
                            <div id="img">
                                @{
                                    if (ViewBag.ArtsList != null)
                                    {
                                        foreach (var item in ViewBag.ArtsList)
                                        {
                                            var imgsrc = "/upload/Information/" + item.Id + "/" + item.Photo + "";
                                            <img onclick="location.href = '/Creation/IntroType?id=@item.Id'" src="@imgsrc" style="display: none;">
                                        }
                                    }
                                    if (ViewBag.Arts != null)
                                    {
                                        foreach (var item in ViewBag.Arts)
                                        {
                                            var imgsrc = "/upload/Information/" + item.Id + "/" + item.Photo + "";
                                            <img onclick="location.href = '/Creation/IntroType?id=@item.Id'" src="@imgsrc" style="display: none;">
                                        }
                                    }
                                }
                            </div>
                            <div id="cbtn">
                                <i class="picSildeLeft"><img src="../../img/activities/icon_left.png"></i>
                                <i class="picSildeRight"><img src="../../img/activities/icon_right.png"></i>
                                <div id="cSlideUl" class="">
                                    <ul>
                                        @{
                                            if (ViewBag.ArtsList != null)
                                            {
                                                foreach (var item in ViewBag.ArtsList)
                                                {
                                                    <li><span>@item.ColumName</span></li>
                                                }
                                            }
                                            if (ViewBag.Arts != null)
                                            {
                                                foreach (var item in ViewBag.Arts)
                                                {
                                                    <li><span>@item.Title</span></li>
                                                }
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end滚动看图-->
                </div>
                <div class="second_box">
                    <div class="product-title">
                        <h2 class="side_title">文创产品</h2>
                    </div>
                        <div class="product-content ">

                            @if (ViewBag.Creativity != null)
                            {
                            <div class="product-pic col-md-7 center-block">
                                @{
                                    var imgsrc = "/upload/Information/" + ViewBag.Creativity.Id + "/" + ViewBag.Creativity.Photo + "";
                                    <img src="@imgsrc" alt="" class="img-responsive">
                                }
                            </div>
                            <div class="col-md-5">
                                <h3 class="product-subtitle">@ViewBag.Creativity.Title</h3>
                                <div class="productScrollBox">@Html.Raw(ViewBag.Creativity.Content)</div>
                            </div>

                            }
                        </div>
                                    <div class="footer-box">
                                        <p id="product-address">地址: @ViewBag.Creativity.Address</p>
                                        <p>购咨询电话: @ViewBag.Creativity.ConsultingTelephone</p>
                                        <p>联系人: @ViewBag.Creativity.Contact</p>
                                    </div>
                    <div>
                        <div class="titleBox">
                            <h3 class="hot-sell-title">热卖纪念品</h3>
                        </div>
                        <div>
                            <ul class="hot-sell-cell row" id="hot-sell-box"></ul>
                        </div>
                        <div class="addPic" id="more-btn">
                            <span class="addPicItem"></span>
                            <span class="vertical"></span>
                        </div>
                    </div>
                </div>
                <!--新增栏目-->
                @if (ViewBag.NewCol != null)
            {
                for (var i = 0; i < ViewBag.NewCol.Count; i++)
                {
                    var src = "/upload/Information/" + ViewBag.NewCol[i].Id + "/" + ViewBag.NewCol[i].Photo;
                        <div id="speech" class="newBossSpeech row">
                            <div class="newBoss-introduce">
                                <p class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">@ViewBag.NewCol[i].ColumName</p>
                                <div class="newBoss-imginfo col-lg-12 col-md-12 col-sm-12 col-xs-12 img-responsive">
                                    <!--图片-->
                                    <div class="newBoss-img  col-lg-4 col-md-5 col-sm-12 col-xs-12">
                                        <img src="@src" alt="" class="img-responsive">
                                    </div>
                                    <!--文字内容-->
                                    <div class="newBossSpeech-info  col-lg-7 col-lg-offset-1 col-md-6 col-md-offset-1 col-sm-12 col-xs-12">
                                        <div class="center-block " id="bossInfoBox">
                                            <h4>@ViewBag.NewCol[i].Title</h4>
                                            <p class="newInfoP">
                                                @ViewBag.NewCol[i].Intro
                                            </p>
                                            <a href="/Creation/IntroList?id=@ViewBag.NewCol[i].ColumnId "><div class="newBossSpeech-more">查看更多</div></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </main>
    <div class="bm-line"></div>
    <!--页脚-->
    @if (ViewBag.Footer != null)
    {
        <script type="text/javascript" src="../../js/jquery.min.js"></script>
        <script src="../../js/activities/slide2.js" type="text/javascript" charset="utf-8"></script>
        <script type="text/javascript" src="../../common/common.js"></script>
        <script type="text/javascript" src="../../js/bootstrap.min.js"></script>
        <script type="text/javascript" src="../../js/creation/creation.js"></script>
        <footer class="container footer ">
            <div class="row">
                <!--联系我们-->
                <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 callme padding_0">
                    <p class="callmeP1">联系我们</p>
                    <p class="callmeP2">电话:<span> @ViewBag.Footer.PhoneNumber</span></p>
                    <p class="callmeP3">地址:<span> @ViewBag.Footer.Address</span></p>
                    <div class="row twopic">
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 twopicDiv1">
                            <img class="img-responsive" src="@ViewBag.Footer.Wechat" />
                            <p><img src="../common/footerImg/bottom_wechat.png" /><span class="weixincolor">关注官方微信</span></p>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <img class="img-responsive" src="@ViewBag.Footer.Watermark" />
                            <p><img src="../common/footerImg/weibo-icon.png" /><span class="color">关注官方微博</span></p>
                        </div>
                    </div>
                </div>
                <!--友情链接-->
                <div class="col-xs-12 col-sm-5 col-md-4 col-lg-4 col-lg-offset-1 col-md-offset-1  link padding_0">
                    <p class="linkP1">友情链接</p>
                    <!--博物馆-->
                    <div class="footer-museum divselect">
                        <cite onchange="window.location=this.href;">博物馆</cite>
                        <ul id="OtherList" tag="@ViewBag.Footer.MuseumLink"></ul>
                    </div>
                    <!--政府-->
                    <div class="footer-government divselect">
                        <cite onchange="window.location=this.href;">其他</cite>
                        <ul id="GovernmentalList" tag="@ViewBag.Footer.GovernmentLink"></ul>
                        <script>
                            $(function () {
                                var data = JSON.parse($('#GovernmentalList').attr('tag'));
                                var cc1 = "";
                                $.each(data, function (i, item) {
                                    cc1 += "<li><a href='" + item.url + "' selectid='" + i + "'>" + item.name + "</a></li>"
                                });

                                $('#GovernmentalList').append(cc1);

                                var data2 = JSON.parse($('#OtherList').attr('tag'));
                                var cc2 = "";
                                $.each(data2, function (i, item) {
                                    cc2 += "<li><a href='" + item.url + "' selectid='" + i + "'>" + item.name + "</a></li>"
                                });

                                $('#OtherList').append(cc2);

                            });
                        </script>
                    </div>

                    <p class="help">游览帮助</p>
                    <div class="link-btm-info">
                        <ul>
                            @if (ViewBag.JumpLink != null)
                            {
                                foreach (var item in ViewBag.JumpLink)
                                {
                                    <li>
                                        <a href="/VisitGuide/Index#@item.Id">@item.Name</a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
                <!--版权-->
                <div class="col-xs-12  copyright padding_0">
                    <div>
                        <img class="img-responsive" src="../common/footerImg/bottom_logo.png" />
                    </div>
                    <p class="copyrightP1">金沙遗址博物馆版权所有</p>
                    <p class="copyrightP2">@ViewBag.Footer.RegisterNo</p>
                </div>
            </div>
            <!--返回顶部-->
            <div class="toTop" style="display: none;">
                <img class="bgarr" src="/img/arrows/return_nor.png" />
                <img class="hoverImg" src="/img/arrows/return_pre.png">
            </div>
        </footer>
    }
    <script>
                            $("#loginout").on("click", function () {
                                $.ajax({
                                    url: '/api/Members/MembersLoginout',
                                    type: 'GET',
                                    dataType: "text",
                                    contentType: "application/json",
                                    success: function (data) {
                                        data = JSON.parse(data)
                                        alert(data.message);
                                        window.location.reload();
                                    }
                                });
                            });
    </script>

