    </div>
    <!--Banner图下面的内容-->
    <div class="banner ">
        @if (ViewBag.Banner != null)
        {
            var src = "/upload/banner/" + ViewBag.Banner.FileName + "";
            <img src="@src" alt="" class="img-responsive center-block">
        }
    </div>
    <main class="container">
        <!--Banner图下面的内容-->
        <div class="content">
            <!-- 金沙快讯 -->
            <div class="content-nav-one">
                <h2>News</h2>
            </div>
            <div id="showroom" class="showroom">
                <div id="NewsDivDocker"></div>
                    <!--翻页-->
                    <div id="pageToolbar" class="pageToolbar"></div>
                    <section>
                        <!-- 公告 -->
                        <div class="content-nav-two">
                            <h2>Announcements</h2>
                        </div>
                        <div class="content-notice">
                            <div id="AnnouncementsDivDocker"></div>
                        </div>
                        <!--翻页-->
                        <div id="pageToolbar2" class="pageToolbar"></div>
                    </section>
                </div>

            <!--页面下面的长线-->
        </div>

        <!--新增栏目-->
        @if (ViewBag.NewCol != null)
            {
                for (var i = 0; i < ViewBag.NewCol.Count; i++)
                {
                    var src = "~/upload/Information/" + ViewBag.NewCol[i].Id + "/" + ViewBag.NewCol[i].Photo;
                <div id="speech" class="boss-speech row">
                    <div class="boss-introduce">
                        <p class="col-lg-12 col-md-12 col-sm-12 col-xs-12 intosandsTitle">@ViewBag.NewCol[i].ColumName</p>
                        <div class="boss-imginfo col-lg-12 col-md-12 col-sm-12 col-xs-12 img-responsive">
                            <!--图片-->
                            <div class="boss-img  col-lg-4 col-md-5 col-sm-12 col-xs-12">
                                <img src="@src" alt="" class="img-responsive">
                            </div>
                            <!--文字内容-->
                            <div class="boss-speech-info clearfix col-lg-7 col-lg-offset-1 col-md-6 col-md-offset-1 col-sm-12 col-xs-12">
                                <div class="center-block " id="bossInfoBox">
                                    <h4>@ViewBag.NewCol[i].Title</h4>
                                    <p class="infoP">
                                        @ViewBag.NewCol[i].Intro
                                    </p>
                                    <a href="/Culture/IntroList?id=@ViewBag.NewCol[i].ColumnId "><div class="boss-speech-more">Learn more</div></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

    </main>
    <div class="line"></div>
