    <script>
        //手机号码验证
        $("#tel").on("blur", function () {
            var _val = $(this).val();
            if (_val == '') {
                $(this).siblings("i").html("手机号码不能为空").css({ "display": "inline-block" });
                return false;
            }
            if (!(/^1(3|4|5|7|8)\d{9}$/.test(_val))) {
                console.log("11");
                $(this).siblings("i").html("手机号码有误，请重填").css({ "display": "inline-block" });
                return false;
            } else {
                $(this).siblings("i").html("").hide();
            }
        });
        $("#eml").on("blur", function () {
        var _val = $(this).val();
        if (_val == '') {
            $(this).siblings("i").html("邮箱不能为空").css({ "display": "inline-block" });
            return false;
        }
        if (!(/^([0-9A-Za-z\-_\.]+)@@([0-9a-z]+\.[a-z]{2,3}(\.[a-z]{2})?)$/g.test(_val))) {
            $(this).siblings("i").html("邮箱格式有误，请重填").css({ "display": "inline-block" });
            return false;
        } else {
            $(this).siblings("i").html("").hide();
        }
        });
        $("#forgetpsdbtn").on("click", function () {
            //是否通过验证
            var flag = true;
            var _tel = $("#tel").val();
            var _password = $("#psd").val();
            var _input = $('form input');
            _input.map(function (index, val) {
                if ($(val).val() == '') {
                    $(val).siblings("i").html("请输入有效内容").css({ "display": "inline-block	" });
                    flag = false;
                    return false;
                }
                if ($(val).siblings("i").is(":visible")) {
                    flag = false;
                    return false;
                }
            });
            if (flag) {
                var parameter = {
                    phone: $("#tel").val(),
                    email: $("#eml").val()
                };
                $.ajax({
                    type: "POST",
                    contentType: "application/json",
                    url: "/api/Members/ForgotPassword",
                    data: JSON.stringify(parameter),
                    async: true,
                    beforeSend: showToast(),
                    success: function (res) {
                        hideToast();
                        if (res.code == 1)
                        {
                            var data = JSON.parse(res.data);
                            $("#loginMsg").show().find("p").html("重置后的密码：" + data.body.dataTable.dataRow["0"].column["0"].value);
                        }
                        else
                        {
                            $("#loginMsg").show().find("p").html(res.message);
                        }
                    }
                });
            }
            return false;
        })
    </script>
